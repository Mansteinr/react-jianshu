.header-wrapper
  height 56px
  border-bottom 1px solid #f0f0f0
  a
    position absolute
    top 0
    left 0
    height 56px
    background url(../../common/image/logo.png)
    width 100px
    height 56px
    background-size contain
  .nav
    width 960px
    height 100%
    margin 0 auto
    .nav-item
      line-height 56px
      padding 0 15px
      font-size 17px
      color #333
      cursor pointer
      &.active
        color #ea6f5a;
      &.right
        float right
        color #969696
      &.left
        float left
