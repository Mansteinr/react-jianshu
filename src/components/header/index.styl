.header-wrapper
  height 56px
  border-bottom 1px solid #f0f0f0
  a
    position absolute
    top 0
    left 0
    height 56px
    background url(../../common/image/logo.png)
    width 100px
    height 56px
    background-size contain
  .nav
    width 960px
    height 100%
    margin 0 auto
    padding-right: 70px
    box-sizing: border-box;
    .nav-item
      line-height 56px
      padding 0 15px
      font-size 17px
      color #333
      cursor pointer
      &.active
        color #ea6f5a;
      &.right
        float right
        color #969696
      &.left
        float left
    .search-wrapper
      position relative
      float left
      .nav-search
        width 160px
        input 
          width 100%
          height 38px
          padding 0 30px 0 20px
          margin-top 9px
          box-sizing border-box
          border none 
          outline none 
          border-radius 19px
          background #eee
          font-size 14px
          color #666
          ::placeholder
            color #999
        .iconfont
          position absolute
          width 30px
          line-height 30px
          border-radius 50%
          right 5px
          bottom 5px
          text-align center
        &.focused
          width 240px
          .iconfont
            background #777777
            color #ffffff
  .addtion
    position absolute
    right 0
    top 0
    height 56px
    .button
      float right
      margin-right: 20px;
      padding 0 20px
      line-height 38px
      margin-top 9px
      border-radius 19px
      border 1px solid #ec6149
      font-size 14px
      &.reg
        color #ec6149
      &.writting
        color #fff
        background #ec6149

.slide-enter, .slide-exit
  transition all .3s ease-out
.slide-enter-active
  width 240px
.slide-exit-active
  width 160px